<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    package="com.example.nako.thetreediary">

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        package="com.thbs.skycons.library" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".EditActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".TreeSelect"
            android:label="@string/title_activity_tree_select"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AddNewTree"
            android:label="@string/title_activity_add_new_tree"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".ShowActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>