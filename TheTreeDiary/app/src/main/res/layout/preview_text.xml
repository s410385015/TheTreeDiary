<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="1"
    android:layout_width="400dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView11" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="43dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            app:srcCompat="@drawable/edit_black"
            android:id="@+id/preview_Edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1.56" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/cancel_opt"
            android:id="@+id/preView_type"
            android:layout_weight="0.05" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/cancel_opt"
            android:id="@+id/preView_weather"
            android:layout_weight="0.05" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/cancel_opt"
            android:id="@+id/preView_mood"
            android:layout_weight="0.05"/>
    </LinearLayout>

    <TextView
        android:layout_width="322dp"
        android:id="@+id/preView_title"
        android:layout_height="30dp"

        android:gravity="center" />

    <View
        android:layout_width="242dp"
        android:layout_height="2dip"
        android:background="?colorPrimaryDark"
        android:id="@+id/preView_div" />

    <TextView
        android:layout_width="332dp"
        android:layout_height="353dp"
        android:id="@+id/preView_context" />

</LinearLayout>