<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/editpage_top"
        android:layout_height="58dp">

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/SG_Opt"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:weightSum="100">

            <RadioButton
                android:text="編寫"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/write"
                android:layout_margin="0dp"
                android:layout_weight="25"
                android:padding="0dp"
                android:layout_centerVertical="true"
                style="@style/RadioButton" />

            <RadioButton
                android:text="日期"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/date"
                android:layout_margin="0dp"
                android:layout_weight="25"
                android:padding="0dp"
                android:layout_centerVertical="true"
                style="@style/RadioButton" />
            <!---
            <RadioButton
                android:text="設定"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/setting"
                android:layout_margin="0dp"
                android:layout_weight="25"
                android:padding="0dp"
                android:layout_centerVertical="true"
                style="@style/RadioButton" />-->
        </info.hoang8f.android.segmented.SegmentedGroup>

    </RelativeLayout>


    <view
        android:layout_width="match_parent"
        class="android.support.v4.view.ViewPager"
        android:id="@+id/Diaryview"
        app:buttonGravity="top"
        android:layout_height="470dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorPrimary">

        <Button
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/textDelete"
            android:background="@drawable/ic_delete_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="63.72" />

        <Button
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/textPreview"
            android:layout_weight="1"
            android:background="@drawable/icon_preview" />

        <Button
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/textSave"
            android:layout_weight="1"
            android:background="@drawable/ic_save_white_24dp" />
    </LinearLayout>

    <include layout="@layout/textset" />
    <include layout="@layout/edit_write" />
    <include layout="@layout/edit_date" />
    <include layout="@layout/preview_text"/>
</LinearLayout>