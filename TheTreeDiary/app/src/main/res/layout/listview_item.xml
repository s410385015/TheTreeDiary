<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="right|center"
        android:tag="Bottom3"
        android:weightSum="10">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />



        <ImageView
            android:id="@+id/edit_opt"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/preview_opt" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/trash_opt"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/trash_bin" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/cancel_opt"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/cancel_opt" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/d_main"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@color/white"
        android:padding="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_weight="1.02">

            <TextView
                android:id="@+id/d_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="Hover"
                android:text="DiaryTime" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/d_title"
                android:textSize="30sp"
                android:gravity="left|center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:text="     "
                    android:layout_weight="0.7" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    swipe:srcCompat="@drawable/ic_type_5n"
                    android:id="@+id/d_type"
                    android:layout_weight="0.1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    swipe:srcCompat="@drawable/ic_weather_sunny"
                    android:id="@+id/d_weather"
                    android:layout_weight="0.1" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    swipe:srcCompat="@drawable/ic_mood_happy"
                    android:id="@+id/d_mood"
                    android:layout_weight="0.1" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" />

            <ImageView
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                swipe:srcCompat="@drawable/icon_locker"
                android:id="@+id/d_lock" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" />

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>