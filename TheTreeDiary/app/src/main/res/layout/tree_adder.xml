<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_centerInParent="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:id="@+id/textView14" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/tree_add_left"
                android:id="@+id/leftOpt"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/t1_stage1"
                android:id="@+id/tree_add_image"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/tree_add_right"
                android:id="@+id/rightOpt"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seTitle"
                android:layout_weight="1"
                android:textColor="?colorPrimary"
                android:gravity="center" />

            <EditText
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:hint="請輸入標題"
                android:textColorHint="?colorPrimary"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/Addedit" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/Addspinner"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:textColor="?colorPrimary"
                android:gravity="center"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/AddButton"
                android:background="@drawable/add_new" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>